# Sumeria Personal Assistant Configuration

# Application Settings
APP_NAME=Sumeria Personal Assistant
APP_VERSION=1.0.0
DEBUG=false

# MCP Server Configuration
MCP_SERVER_NAME=Sumeria MCP Server
MCP_TRANSPORT=stdio  # Options: stdio, streamable-http

# Gmail OAuth2 Configuration
# Download credentials.json from Google Cloud Console
# https://console.cloud.google.com/apis/credentials
GMAIL_CREDENTIALS_FILE=credentials.json
GMAIL_TOKENS_DIR=tokens
GMAIL_DEFAULT_ACCOUNT=your-email@gmail.com

# Gmail API Scopes (comma-separated)
# Don't change unless you know what you're doing
# GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.modify

# Redis Configuration (for future use)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your-password

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./sumeria.db

# API Configuration (if using HTTP transport)
API_V1_PREFIX=/api/v1
# CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Holded API Configuration
# Get your API key from: https://app.holded.com/settings/developers
HOLDED_API_KEY=your-holded-api-key
HOLDED_API_BASE_URL=https://api.holded.com
